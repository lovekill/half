<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:background="@color/black"
                    android:layout_height="@dimen/title_height">

        <ImageView android:id="@+id/close"
                   android:src="@drawable/camera_close_2x"
                   android:layout_width="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="20dp"
                   android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="400dp">

        <FrameLayout android:id="@+id/camaraPreView"
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"/>

        <LinearLayout android:weightSum="2" android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView android:layout_weight="1"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"/>

            <ImageView android:src="@drawable/camera_half_2x"
                       android:layout_weight="1"
                       android:scaleType="centerCrop"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout android:layout_width="wrap_content" android:background="@color/black" android:layout_height="50dp">

        <ImageView android:id="@+id/camaraLight"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

        <ImageView android:layout_width="wrap_content"
                   android:id="@+id/forground"
                   android:layout_height="wrap_content"/>

        <ImageView android:layout_width="wrap_content" android:id="@+id/change" android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView android:id="@+id/takePic"
               android:layout_gravity="center_horizontal"
               android:src="@drawable/camera_shot_2x"
               android:layout_width="80dp"
               android:layout_height="80dp"/>
</LinearLayout>